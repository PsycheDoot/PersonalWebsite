
@{
    ViewBag.Title = "Carousel";
}

<div id="@ViewBag.id" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        @{ int i = 0;
            foreach (string a in ViewBag.links) {
                <li data-target="#@ViewBag.id" data-slide-to="@i" class="@if (i == 0) {<text>active</text>} "></li>
                i++;
            }
            }
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        @{ i = 0;
            foreach (string a in ViewBag.links) {
                <div class="carousel-item @if(i==0){<text>active</text>}">
                    <img src="~/Pics/@a" style="max-width:100%; max-height:240px" alt="@a">
                </div>
                i++;
            }
        }

    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#@ViewBag.id" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#@ViewBag.id" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

