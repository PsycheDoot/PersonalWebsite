        @{  string[] aboutSrc = {"bike_nugs.jpg", "pop_me.jpg", "jojo.jpg", "pc_rig.jpg" };
            string id = "About-Preview";
        }
        @Html.Action("Carousel", "Home", new {id, src = aboutSrc})
